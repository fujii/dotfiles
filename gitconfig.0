[init]
	defaultBranch = main

[push]
	default = simple
	recurseSubmodules = on-demand

[alias]
	logg = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	st = status
	ci = commit
	co = checkout
	br = branch
	stt = status -uno
	di = diff
	dis = diff --staged

[merge]
	conflictStyle = diff3

[diff]
	submodule = log

[credential]
	helper = store
